pipeline {
    agent any 
    

    
    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'echo $NOME $SOBRENOME'
            }
            
        }
        stage('Test') {
            steps {
                echo 'Testando...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'

            }
        }
        stage('smoke teste') {
            steps {
                echo 'fuma√ßa...'
            }
        }
    }
    
    post {
        always { echo "Eu sempre vou ser executado!"}
        success { echo "Somente serei executado quando finalizar com sucesso!"}
        failure { echo "Somentei serei executado quando finalizar com erro!"}
    }
    
}
